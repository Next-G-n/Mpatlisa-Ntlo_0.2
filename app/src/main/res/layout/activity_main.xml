<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutwelcome"
        >

        <TextView
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_to_mpatlisa_ntlo"
            android:id="@+id/welcome_login"
            android:textSize="65sp"
            android:gravity="center"
            android:textColor="#3498DB"/>


    </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_below="@+id/layoutwelcome">

    <com.facebook.login.widget.LoginButton
        android:id="@+id/Connect_with_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Create_Account"
        android:text="@string/sign_in"
        android:drawableStart="@drawable/ic_icons8_user_male_64"
        android:textColor="@android:color/white"
        android:background="@drawable/button3"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        android:paddingEnd="35dp"
        android:textAllCaps="false"/>
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/Join_us"
        android:text="@string/Join_us"
        android:textColor="#4698EA"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
       android:layout_gravity="center_horizontal"
        />

</LinearLayout>

    <include
        android:id="@+id/llProgressBar"
        android:visibility="gone"
        layout="@layout/progressbar"/>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>